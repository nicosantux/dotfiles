[alias]
  bb = !sh ~/dotfiles/git/better-branch.sh
[core]
  editor = nvim
  pager = delta
[delta]
  navigate = true
  side-by-side = true
[diff]
  colorMoved = default
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[fetch]
  prune = true
[merge]
  conflictstyle = diff3
[rerere]
	enabled = true
