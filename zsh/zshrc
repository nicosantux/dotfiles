# aliases

# Detect package manager and run dev script
run_dev() {
  if [[ -f package-lock.json ]]; then
    npm run dev "$@"
  elif [[ -f pnpm-lock.yaml ]]; then
    pnpm dev "$@"
  elif [[ -f yarn.lock ]]; then
    yarn dev "$@"
  elif [[ -f bun.lockb ]]; then
    bun run dev "$@"
  else
    echo "‚ùå No package manager found."
    return 1
  fi
}

alias dev='run_dev'
